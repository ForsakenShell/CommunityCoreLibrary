    <RecipeDef Class="CommunityCoreLibrary.AdvancedRecipeDef" ParentName="Example_13_SynthesizedDrugBase">
        <defName>Example_13_SynthesizeBeer</defName>
        <label>synthesize beer</label>
        <description>synthesizes a beer from hops.</description>
        <jobString>Synthesizing a beer.</jobString>
        <workAmount>100</workAmount>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>RawHops</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>RawHops</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Beer>1</Beer>
        </products>
    </RecipeDef>

