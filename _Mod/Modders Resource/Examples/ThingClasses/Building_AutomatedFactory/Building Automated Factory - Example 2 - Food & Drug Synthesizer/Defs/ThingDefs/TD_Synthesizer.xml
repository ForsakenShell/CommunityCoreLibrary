<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef Name="BuildingBase" Abstract="True">
        <category>Building</category>
        <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
        <selectable>true</selectable>
        <drawerType>MapMeshAndRealTime</drawerType>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <repairEffect>Repair</repairEffect>
        <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
        <filthLeaving>BuildingRubble</filthLeaving>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>Synthesizer</defName>
        <label>synthesizer</label>
        <thingClass>CommunityCoreLibrary.Building_AutomatedFactory</thingClass>
        <graphicData>
            <texPath>Things/Building/Production/NutrientDispenser</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(3,4)</drawSize>
            <damageData>
                <rect>(0.02,0.25,2.96,2.85)</rect>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
            </damageData>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>Impassable</passability>
        <fillPercent>1</fillPercent>
        <statBases>
            <WorkToMake>2200</WorkToMake>
            <MaxHitPoints>350</MaxHitPoints>
            <Flammability>1.0</Flammability>
        </statBases>
        <description>Synthesizes actual meals from organic feedstocks. It consumes the same amount of ingredients as actual cooking but takes less time. Accepts raw food, but not rough plant matter like hay.  When additional research is complete, this machine can also synthesize drugs from their raw ingredients.</description>
        <building>
            <isMealSource>true</isMealSource>
            <wantsHopperAdjacent>true</wantsHopperAdjacent>
        </building>
        <tickerType>Normal</tickerType>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <startElectricalFires>true</startElectricalFires>
                <basePowerConsumption>500</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CommunityCoreLibrary.CompProperties_HopperUser">
                <compClass>CommunityCoreLibrary.CompHopperUser</compClass>
            </li>
            <li Class="CommunityCoreLibrary.CompProperties_AutomatedFactory">
                <compClass>CommunityCoreLibrary.CompAutomatedFactory</compClass>
                <outputVector>DirectToPawn</outputVector>
                <productionMode>PawnInteractionOnly</productionMode>
            </li>
            <li Class="CommunityCoreLibrary.CompProperties_AffectedByFacilities">
                <!-- This must be set true to connect this building to facilities flagged as canLinkToMedBedsOnly (Vitals Monitor) -->
                <overrideBedOnly>true</overrideBedOnly>
                <linkableFacilities>
                    <li>MultiAnalyzer</li>
                    <li>VitalsMonitor</li>
                </linkableFacilities>
            </li>
        </comps>
        <size>(3,4)</size>
        <costList>
            <Steel>90</Steel>
        </costList>
        <socialPropernessMatters>true</socialPropernessMatters>
        <interactionCellOffset>(0,0,3)</interactionCellOffset>
        <hasInteractionCell>true</hasInteractionCell>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <designationCategory>Production</designationCategory>
        <constructEffect>ConstructMetal</constructEffect>
        <placeWorkers>
            <li>CommunityCoreLibrary.PlaceWorker_HopperMagnifier</li>
        </placeWorkers>
        <recipes>
            <li>SynthesizeMealSimple</li>
        </recipes>
        <researchPrerequisites>
            <li>MealSynthesis</li>
        </researchPrerequisites>
        <inspectorTabs>
            <li>CommunityCoreLibrary.ITab_AutomatedFactory</li>
        </inspectorTabs>
    </ThingDef>

</Defs>