<?xml version="1.0" encoding="utf-8"?>
<RecipeDefs>

    <RecipeDef>
        <defName>AutomatedStonecutterSandstoneBlocks</defName>
        <label>cut sandstone blocks</label>
        <description>Cuts sandstone blocks from sandstone chunks</description>
        <jobString>Cutting sandstone blocks.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ChunkSandstone</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <BlocksSandstone>20</BlocksSandstone>
        </products>
        <workAmount>1000</workAmount>
    </RecipeDef>

